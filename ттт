    if (RotatingNodes == null) return;

    for (int i = 0; i < RotatingNodes.Count; i++)
    {
        if (RotatingNodes[i] != null)
        {
            Node obj = RotatingNodes[i];
            
            // Сохраняем матрицу мира
            mat4 transform = obj.GetWorldTransform();
            
            // Заменяем только вращение, сохраняя позицию и масштаб
            transform = MathLib.Mat4FromQuat(currentRotation) * MathLib.Mat4Translate(transform.GetTranslate());
            
            // Восстанавливаем масштаб (если нужен)
            if (i < originalScales.Count)
            {
                transform = MathLib.Mat4Scale(originalScales[i]) * transform;
            }

            obj.SetWorldTransform(transform);
        }
    }
